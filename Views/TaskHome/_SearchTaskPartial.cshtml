@model IEnumerable<TaskLoggerV1.Models.TaskModel>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Task Date</th>
                <th>Hours Logged</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.TaskDate.ToString("yyyy-MM-dd")</td>
                    <td>@task.HoursLogged</td>
                    <td>@(task.IsCompleted ? "Yes" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-primary btn-edit" data-id="@task.Id">Edit</button>
                        <button class="btn btn-sm btn-danger btn-delete" data-id="@task.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-3">No tasks found.</p>
}

