@model IEnumerable<TaskLoggerV1.Models.TaskModel>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-3 align-middle">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Task Date</th>
                <th>Hours Logged</th>
                <th>Completed</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr id="taskRow_@task.Id">
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.TaskDate.ToString("yyyy-MM-dd")</td>
                    <td>@task.HoursLogged</td>
                    <td>
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary btn-edit" data-id="@task.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" data-id="@task.Id">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-info mt-3">No tasks found.</p>
}
