@model IEnumerable<TaskLoggerV1.Models.TaskModel>

@{
    ViewBag.Title = "Task View Manager";
}

<h2>Task View Manager</h2>

<div class="mb-3">
    @Html.ActionLink("Create New Task", "Create", null, new { @class = "btn btn-success" })
</div>

<div class="mb-3">
    @using (Html.BeginForm("Search", "TaskHome", FormMethod.Get))
    {
        <div class="input-group">
            <input type="date" name="date" class="form-control" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    }
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Task Date</th>
                <th>Hours Logged</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.TaskDate.ToString("yyyy-MM-dd")</td>
                    <td>@task.HoursLogged</td>
                    <td>@(task.IsCompleted ? "Yes" : "No")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = task.Id }, new { @class = "btn btn-sm btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = task.Id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tasks available.</p>
}
